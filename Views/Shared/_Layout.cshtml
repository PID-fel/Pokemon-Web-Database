<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulbaClone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulbaClone.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pokemons-forms.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BulbaClone</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>



                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pokemons" asp-action="Index">PokeDex</a>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Forms" asp-action="Index">FormDex</a>
                        </li>

                        <li class="nav-item" style="display: flex; align-items: center;">
                            <ul style="list-style: none;">
                                <li onmouseover="this.children[0].style.display='block'" onmouseout="this.children[0].style.display='none'">
                                    Pokedex
                                    <ul style="display: none; position: absolute; background-color: green; padding: 0;">
                                        <li style="display: flex; align-items: center; padding: 10px;"><a href="/Pokemons" style="color: inherit; text-decoration: none;">National Pokedex</a></li>
                                        <li style="display: flex; align-items: center; padding: 10px;"><a href="/Pokemons/Index/generation|1" style="color: inherit; text-decoration: none;">Generation 1</a></li>
                                        <li style="display: flex; align-items: center; padding: 10px;"><a href="/Pokemons/Index/generation|2" style="color: inherit; text-decoration: none;">Generation 2</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>

                </div>


            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BulbaClone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
